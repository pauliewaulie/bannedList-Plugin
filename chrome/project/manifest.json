{
    "name": "#BannedList Highlighter",
    "version": "1.0",
    "description": "Highlight #BannedList phrases on every page you read.",
    "homepage_url": "https://github.com/poblish/bannedList-Plugin",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/icon19.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_globs": [
                "https://gist.github.com/gists/*/edit*"
            ],
            "css": [
                "css/bannedList.css"
            ],
            "js": [
                "js/jquery-1.7.1.min_plus_highlight.js",
                "js/bannedList.js"
            ]
        }
    ],
    "permissions": []
}